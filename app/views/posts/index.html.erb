<h1>Listes des réclamations</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><h3><%= post.title %></h3></td>
        <td><%= link_to 'Voir', post %></td>
        <% if user_signed_in? %>
          <td><%= link_to 'Editer', edit_post_path(post) %></td>
          <td><%= link_to 'Effacer', post, method: :delete, data: { confirm: 'Etes vous sûr ?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nouvelle réclamation', new_post_path %>
